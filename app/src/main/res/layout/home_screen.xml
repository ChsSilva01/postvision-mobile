<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/primary_offwhite_500"
    android:id="@+id/home_screen">

    <ImageButton
        android:layout_width="52dp"
        android:layout_height="52dp"
        android:background="@drawable/profile_icon"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="17dp"
        android:layout_marginStart="25dp"
        android:id="@+id/home_button_profile"
        android:contentDescription="botão perfil"
        />

    <ImageButton
        android:layout_width="21dp"
        android:layout_height="23.33dp"
        android:background="@drawable/notification_icon"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="17dp"
        android:layout_marginEnd="25dp"
        android:id="@+id/home_button_notification"
        android:contentDescription="botão notificação"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="31dp"
        android:layout_marginLeft="@dimen/margin_left"
        android:text="Olá,"
        app:layout_constraintTop_toBottomOf="@+id/home_button_profile"
        app:layout_constraintLeft_toLeftOf="parent"
        android:id="@+id/home_text_welcome"
        android:textSize="20sp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="31dp"
        app:layout_constraintLeft_toRightOf="@+id/home_text_welcome"
        app:layout_constraintTop_toBottomOf="@+id/home_button_profile"
        android:text="Renan"
        android:layout_marginStart="3dp"
        android:textColor="@color/highlight_black_500"
        android:textSize="20sp"
        />

    <LinearLayout
        android:layout_width="345dp"
        android:layout_height="222dp"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@+id/home_text_welcome"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="23dp"
        android:background="@color/white"
        android:id="@+id/home_linear_analise"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Faça sua análise"
            android:textSize="24sp"
            android:layout_marginTop="20dp"
            android:layout_marginStart="26dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Corrija sua postura e melhore seu desempenho nos exercícios físicos."
            android:layout_marginStart="26dp"
            android:textSize="14sp"
            android:id="@+id/home_text_"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/graph_eyetracker"
            android:layout_marginStart="@dimen/margin_left"
            android:layout_marginTop="39dp"
        />

        <ImageButton
            android:layout_width="100dp"
            android:layout_height="46dp"
            android:layout_marginStart="235dp"
            android:layout_marginBottom="32dp"
            android:background="@drawable/start_cam" />


    </LinearLayout>
    <LinearLayout
        android:layout_width="220dp"
        android:layout_height="96dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/home_linear_analise"
        android:background="@color/purple_800"
        android:layout_marginTop="15dp"
        android:id="@+id/home_linear_statistics"
        android:orientation="vertical"
        android:gravity="">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:text="Estatísticas"
                android:layout_marginStart="28dp"
                android:layout_marginTop="15dp"
                android:id="@+id/home_text_title_statistics"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Verifique as estatísticas das suas ultimas sessões"
                android:textSize="14sp"
                android:layout_marginStart="28dp"
                android:layout_marginTop="5dp"
                android:id="@+id/home_text_statistics"/>
    </LinearLayout>
    <Button
        android:layout_width="115dp"
        android:layout_height=""


</androidx.constraintlayout.widget.ConstraintLayout>