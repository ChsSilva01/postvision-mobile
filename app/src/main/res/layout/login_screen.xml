<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary_offwhite_500"
    android:id="@+id/login_screen">

    <ImageView
        android:id="@+id/image_graph_head"
        android:layout_width="350dp"
        android:layout_height="350dp"
        android:layout_marginStart="258dp"
        android:layout_marginTop="-150dp"
        android:src="@drawable/graph_head"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_marginTop="258dp"
        android:layout_marginStart="25dp"
        android:id="@+id/text_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Login"
        android:textSize="32sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textColor="@color/highlight_black_500"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="E-Mail"
        android:textSize="13sp"
        android:textColor="@color/highlight_black_700"
        app:layout_constraintTop_toBottomOf="@+id/text_login"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="25dp"
        android:layout_marginTop="47dp"
        android:id="@+id/text_email"
        android:labelFor="@+id/edit_email"
        />
    <EditText
        android:id="@+id/edit_email"
        android:layout_width="345dp"
        android:layout_height="40dp"
        app:layout_constraintTop_toBottomOf="@+id/text_email"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="10dp"
        android:autofillHints="emailAddress"
        android:labelFor="@+id/text_email"
        android:inputType="textEmailAddress"
        android:hint="Digite o seu e-mail"
        android:textSize="13sp"
        android:textColorHint="@color/highlight_black_800"
        android:background="@color/white"
        android:paddingStart="20dp"
        android:paddingEnd="0dp"
        app:layout_constraintCircleRadius="20dp"

        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Senha"
        app:layout_constraintTop_toBottomOf="@+id/edit_email"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textSize="13sp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="20dp"
        android:textColor="@color/highlight_black_700"
        android:id="@+id/text_password"
        />

    <EditText
        android:id="@+id/edit_password"
        android:layout_width="345dp"
        android:layout_height="40dp"
        app:layout_constraintTop_toBottomOf="@+id/text_password"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="10dp"
        android:autofillHints="emailAddress"
        android:labelFor="@+id/text_password"
        android:inputType="textEmailAddress"
        android:hint="Digite o seu e-mail"
        android:textSize="13sp"
        android:textColorHint="@color/highlight_black_800"
        android:background="@color/white"
        android:paddingStart="20dp"
        android:paddingEnd="0dp"
        app:layout_constraintCircleRadius="20dp"
        app:layout_constraintRight_toRightOf="parent"

        />

    <Button
        android:layout_width="344dp"
        android:layout_height="46dp"
        app:layout_constraintTop_toBottomOf="@+id/edit_password"
        app:layout_constraintLeft_toLeftOf="parent"
        android:id="@+id/button_login"
        android:layout_marginTop="101dp"
        android:background="@color/secundary_purple_500"
        android:hint="Entrar"
        android:textColorHint="@color/white"
        app:layout_constraintRight_toRightOf="parent"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="NÃ£o Tem conta"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_login"
        android:layout_marginStart="86dp"
        android:textColor="@color/highlight_black_700"
        android:id="@+id/text_donthaveaccount"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cadastre-se"
        android:textColor="@color/secundary_purple_500"
        app:layout_constraintTop_toBottomOf="@+id/button_login"
        app:layout_constraintLeft_toRightOf="@+id/text_donthaveaccount"
        android:layout_marginTop="20dp"
        android:layout_marginStart="8dp"
        />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:src="@drawable/graph_eye"
        android:layout_marginTop="800dp"
        android:layout_marginStart="-150dp"
        android:rotation="-12"
        />
</androidx.constraintlayout.widget.ConstraintLayout>