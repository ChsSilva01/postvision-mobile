<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary_offwhite_500">

    <ImageView
        android:id="@+id/signup_image_graph_head"
        android:layout_width="350dp"
        android:layout_height="350dp"
        android:layout_marginStart="258dp"
        android:layout_marginTop="-150dp"
        android:src="@drawable/graph_head"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/signup_text_singup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginTop="100dp"
        android:text="Cadastro"
        android:textSize="32sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginTop="10dp"
        android:text="E-mail"
        android:textColor="@color/highlight_black_700"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/signup_text_singup" />

    <EditText
        android:id="@+id/edit_email"
        android:layout_width="345dp"
        android:layout_height="40dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="10dp"
        android:autofillHints="emailAddress"
        android:background="@color/white"
        android:hint="Digite o seu e-mail"
        android:inputType="textEmailAddress"
        android:labelFor="@+id/signup_text_email"
        android:paddingStart="20dp"
        android:paddingEnd="0dp"
        android:textColorHint="@color/highlight_black_800"
        android:textSize="13sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_email" />

    <TextView
        android:id="@+id/signup_text_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginTop="10dp"
        android:text="Senha"
        android:textColor="@color/highlight_black_700"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edit_email" />

    <EditText
        android:id="@+id/signup_edit_password"
        android:layout_width="345dp"
        android:layout_height="40dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="10dp"
        android:background="@color/white"
        android:hint="Digite sua senha"
        android:paddingStart="20dp"
        android:paddingEnd="0dp"
        android:textColorHint="@color/highlight_black_800"
        android:textSize="13sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/signup_text_password" />

    <TextView
        android:id="@+id/signup_text_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_left"
        android:layout_marginTop="@dimen/signup_margin_top"
        android:text="Nome"
        android:textColor="@color/highlight_black_700"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/signup_edit_password" />

    <EditText
        android:layout_width="345dp"
        android:layout_height="40dp"
        app:layout_constraintTop_toBottomOf="@+id/signup_text_name"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="25dp"
        android:layout_marginTop="10dp"
        android:paddingStart="20dp"
        android:background="@color/white"
        android:paddingEnd="0dp"
        android:hint="Digite o seu nome"
        android:textSize="13sp"
        android:id="@+id/signup_edit_name"
        android:textColorHint="@color/highlight_black_800"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sobrenome"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/signup_edit_name"
        android:layout_marginStart="25dp"
        android:layout_marginTop="10dp"
        android:textColor="@color/highlight_black_700"
        android:id="@+id/signup_text_last_name"
        />

    <EditText
        android:layout_width="345dp"
        android:layout_height="40dp"
        app:layout_constraintTop_toBottomOf="@+id/signup_text_last_name"
        android:layout_marginStart="25dp"
        android:layout_marginTop="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:background="@color/white"
        android:hint="Digite o seu sobrenome"
        android:textSize="13sp"
        android:paddingStart="20dp"
        android:paddingEnd="0dp"
        android:textColorHint="@color/highlight_black_800"
        android:id="@+id/signup_edit_last_name"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Gênero"
        app:layout_constraintTop_toBottomOf="@+id/signup_edit_last_name"
        android:layout_marginStart="25dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="10dp"
        android:textColor="@color/highlight_black_700"
        android:id="@+id/signup_text_gender"
        />

    <EditText
        android:layout_width="345dp"
        android:layout_height="40dp"
        app:layout_constraintTop_toBottomOf="@+id/signup_text_gender"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="25dp"
        android:layout_marginTop="10dp"
        android:background="@color/white"
        android:hint="Digite o seu gênero"
        android:textSize="13sp"
        android:paddingStart="20dp"
        android:paddingEnd="0dp"
        android:textColorHint="@color/highlight_black_800"
        android:id="@+id/signup_edit_gender"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/signup_edit_gender"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="25dp"
        android:text="Telefone"
        android:layout_marginTop="10dp"
        android:textColor="@color/highlight_black_700"
        android:id="@+id/signup_text_telephone"
        />

    <EditText
        android:layout_width="345dp"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/signup_text_telephone"
        android:layout_marginStart="25dp"
        android:background="@color/white"
        android:textColorHint="@color/highlight_black_800"
        android:hint="Digite seu telefone"
        android:textSize="13sp"
        android:paddingStart="20dp"
        android:paddingEnd="0dp"
        android:id="@+id/signup_edit_telephone"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CPF"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/signup_edit_telephone"
        android:layout_marginTop="10dp"
        android:layout_marginStart="25dp"
        android:textColor="@color/highlight_black_700"
        android:id="@+id/signup_text_cpf"
        />

    <EditText
        android:layout_width="345dp"
        android:layout_height="40dp"
        android:background="@color/white"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/signup_text_cpf"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="25dp"
        android:hint="Digite seu CPF"
        android:textSize="13sp"
        android:paddingStart="20dp"
        android:paddingEnd="0dp"
        android:textColorHint="@color/highlight_black_800"
        android:id="@+id/signup_edit_cpf"
        />

    <Button
        android:layout_width="345dp"
        android:layout_height="46dp"
        android:background="@color/secundary_purple_500"
        app:layout_constraintTop_toBottomOf="@+id/signup_edit_cpf"
        android:layout_marginStart="25dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="31dp"
        android:textColorHint="@color/white"
        android:hint="Cadastrar"
        android:id="@+id/signup_button_signup"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/signup_button_signup"
        android:text="Já é cadastrado?"
        android:textSize="13sp"
        android:textColor="@color/highlight_black_800"
        android:layout_marginTop="20dp"
        android:layout_marginStart="118dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:id="@+id/signup_text_registered"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Login"
        android:textColor="@color/secundary_purple_500"
        app:layout_constraintLeft_toRightOf="@+id/signup_text_registered"
        app:layout_constraintTop_toBottomOf="@+id/signup_button_signup"
        android:layout_marginTop="20dp"
        android:layout_marginStart="8dp"
        android:textSize="13sp"
        />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:src="@drawable/graph_eye"
        android:layout_marginTop="800dp"
        android:layout_marginStart="-150dp"
        android:rotation="-12"
        />

</androidx.constraintlayout.widget.ConstraintLayout>