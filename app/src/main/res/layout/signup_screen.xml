<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/primary_offwhite_500">

    <ImageView
        android:id="@+id/image_graph_head"
        android:layout_width="350dp"
        android:layout_height="350dp"
        android:layout_marginStart="258dp"
        android:layout_marginTop="-150dp"
        android:src="@drawable/graph_head"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
       />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cadastro"
        android:textSize="32sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="25dp"
        android:layout_marginTop="100dp"
        android:id="@+id/text_singup"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="E-mail"
        app:layout_constraintTop_toBottomOf="@+id/text_singup"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="25dp"
        android:layout_marginTop="10dp"
        android:textColor="@color/highlight_black_700"
        android:id="@+id/text_email"
        />

    <EditText
        android:id="@+id/edit_email"
        android:layout_width="345dp"
        android:layout_height="40dp"
        app:layout_constraintTop_toBottomOf="@+id/text_email"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="25dp"
        android:layout_marginTop="10dp"
        android:autofillHints="emailAddress"
        android:labelFor="@+id/text_email"
        android:inputType="textEmailAddress"
        android:hint="Digite o seu e-mail"
        android:textSize="13sp"
        android:textColorHint="@color/highlight_black_800"
        android:background="@color/white"
        android:paddingStart="20dp"
        android:paddingEnd="0dp"
        app:layout_constraintCircleRadius="20dp"

        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Senha"
        app:layout_constraintTop_toBottomOf="@+id/edit_email"
        android:layout_marginTop="10dp"
        android:layout_marginStart="25dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textColor="@color/highlight_black_700"
        android:id="@+id/text_password"
        />



</androidx.constraintlayout.widget.ConstraintLayout>