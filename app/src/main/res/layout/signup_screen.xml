<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary_offwhite_500">

    <ImageView
        android:id="@+id/signup_image_graph_head"
        android:layout_width="350dp"
        android:layout_height="350dp"
        android:layout_marginStart="258dp"
        android:layout_marginTop="-150dp"
        android:src="@drawable/graph_head"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/signup_text_singup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginTop="100dp"
        android:text="Cadastro"
        android:textSize="32sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginTop="10dp"
        android:text="E-mail"
        android:textColor="@color/highlight_black_700"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/signup_text_singup" />

    <EditText
        android:id="@+id/edit_email"
        android:layout_width="345dp"
        android:layout_height="40dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="10dp"
        android:autofillHints="emailAddress"
        android:background="@color/white"
        android:hint="Digite o seu e-mail"
        android:inputType="textEmailAddress"
        android:labelFor="@+id/signup_text_email"
        android:paddingStart="20dp"
        android:paddingEnd="0dp"
        android:textColorHint="@color/highlight_black_800"
        android:textSize="13sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_email" />

    <TextView
        android:id="@+id/signup_text_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginTop="10dp"
        android:text="Senha"
        android:textColor="@color/highlight_black_700"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edit_email" />

    <EditText
        android:id="@+id/signup_edit_password"
        android:layout_width="345dp"
        android:layout_height="40dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="10dp"
        android:background="@color/white"
        android:hint="Digite sua senha"
        android:paddingStart="20dp"
        android:paddingEnd="0dp"
        android:textColorHint="@color/highlight_black_800"
        android:textSize="13sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/signup_text_password" />

    <TextView
        android:id="@+id/signup_text_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_left"
        android:layout_marginTop="@dimen/signup_margin_top"
        android:text="Nome"
        android:textColor="@color/highlight_black_700"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/signup_edit_password" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/signup_text_name"

        />


</androidx.constraintlayout.widget.ConstraintLayout>